# hack to include dynamically generated Talipot plugins documentation
def source_read(app, docname, source):
    if docname == 'talipotpluginsdocumentation':
        f = open('@CMAKE_CURRENT_BINARY_DIR@/talipotpluginsdocumentation.rst',
                    'r', encoding='utf-8')
        source[0] += f.read()


def setup(app):
    app.connect('autodoc-process-signature', process_signature)
    app.connect('autodoc-process-docstring', process_docstring)
    app.connect('source-read', source_read)
    app.add_role('fabicon', fabicon_role)
    app.add_role('faricon', faricon_role)
    app.add_role('fasicon', fasicon_role)
    app.add_role('mdicon', mdicon_role)
